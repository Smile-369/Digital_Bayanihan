<%- include('partials/header') %>

<section class="blog-main">
    <div class="blog-container">
        <div class="blog-posts"> 
            <h2>blogposts</h2>
             <% if (postsRizal && postsRizal.length > 0) { %>
                <% postsRizal.forEach(post => { %>
                    <article class="post">
                         <% if (post.image_url) { %>
                            <img class="full-whole" src="<%= post.image_url %>" alt="<%= post.title %>">
                        <% } %>
                        <div class="post-content">
                            <h3><%= post.title %></h3>
                            <p class="post-meta">By <%= post.author || 'Unknown' %> on <%= new Date(post.publish_date).toLocaleDateString() %></p>
                            <p><%= post.excerpt %></p>
                            <a href="/blog/<%= post.slug %>" class="read-more">Read More</a>
                        </div>
                    </article>
                <% }); %>
             <% } else { %>
                 <p>No posts in this category yet.</p>
             <% } %>

        </div>
         </div>
</section>

<%- include('partials/footer') %>